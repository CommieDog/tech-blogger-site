{{> header}}
<main>
    <h2>Edit your post</h2>
    <form id="blogpost-form">
        <label for="title">Title</label>
        <input name="title" id="blogpost-title" value="{{post.title}}" required></input>
        <label for="content">Content</label>
        <textarea name="content" id="blogpost-content" rows="10" required>{{post.content}}</textarea>
        <button type="submit">Update</button>
    </form>
</main>
<script src="js/blogpost.js"></script>
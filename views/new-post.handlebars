{{> header}}
<main class="container">
    <h2>Post your thoughts here...</h2>
    <form id="blogpost-form">
        <label for="title">Title</label>
        <input name="title" id="blogpost-title" required></input>
        <label for="content">Content</label>
        <textarea name="content" id="blogpost-content" rows="10" required></textarea>
        <button type="submit">Submit</button>
    </form>
</main>
<script src="js/blogpost.js"></script>